{% extends 'base.html.twig' %}
{% block body %}

<div>
    {% for fish in allFish %}
        <div class="p-6 bg-white border border-zinc-200 rounded-2xl shadow hover:shadow-md transition flex justify-between font-medium text-gray-700">
            <span>{{ fish.species.name }}</span>
            <div class="flex gap-5">
                <span>{{ fish.length }}</span>
                <span class="text-alert content-center">
                    {{ form_start(deleteForms[fish.id], {'attr': {'onsubmit': 'return confirm("Na pewno usunąć tę rybę?");'}}) }}
                        <button class="btn btn-danger btn-sm">Usuń</button>
                    {{ form_end(deleteForms[fish.id]) }}
                </span>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello fishing!{% endblock %}

{% block body %}
    {{ form_start(addFishForm) }}
        {% if addFishForm.vars.errors|length %}
            <div class="alert alert-danger">
                {{ form_errors(addFishForm) }}
            </div>
        {% endif %}
        <div class="card-primary max-w-sm">
          {{ form_row(addFishForm.species, {
              attr: { 
                  id: 'species',
                  class: 'input-primary', 
                  placeholder: 'Species'
              },
          }) }}
          {{ form_row(addFishForm.length, {
              attr: { 
                  id: 'length',
                  class: 'input-primary', 
                  placeholder: 'Length'
              },
          }) }}
            <button type="submit"
                class="btn-primary">
                wobble IT!
            </button>
        </div>
    {{ form_end(addFishForm) }}

{% endblock %}
